<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textview_sdevice"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:text="设备号:" />
    <TextView
        android:id="@+id/hisensir_device"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="1"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/textview_sdevice"
        android:layout_marginLeft="30dp"

        />
<TextView
    android:id="@+id/textview_stime"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:text="时间:"
    android:textSize="12sp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="120dp" />
    <TextView
        android:id="@+id/hisensir_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="2018-08-01"
        android:textSize="12sp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/textview_temperature"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:layout_below="@+id/textview_sdevice"
        android:text="温度:"/>
    <TextView
        android:id="@+id/hisensir_temperature"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="26"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/textview_temperature"
        android:layout_below="@+id/hisensir_device"
        android:layout_marginLeft="38dp"/>
    <TextView
        android:id="@+id/textview_shumidity"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="相对湿度:"
        android:textSize="12sp"
        android:layout_below="@id/textview_stime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="92dp"
        />
    <TextView
        android:id="@+id/hisensir_shumidity"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="78"
        android:textSize="12sp"
        android:layout_below="@+id/hisensir_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="66dp"/>

    <TextView
        android:id="@+id/textview_battery"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview_temperature"
        android:text="电池电压:" />
    <TextView
        android:id="@+id/hisensir_battery"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="28.6"
        android:textSize="12sp"
        android:layout_below="@+id/hisensir_shumidity"
        android:layout_toRightOf="@+id/textview_battery"
        android:layout_marginLeft="16dp"
        />
    <TextView
        android:id="@+id/textview_strength"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="电压强度:"
        android:textSize="12sp"
        android:layout_below="@+id/textview_shumidity"
        android:layout_alignParentRight="true"
        android:layout_marginRight="92dp"
        />
    <TextView
        android:id="@+id/hisensir_strength"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="3.0"
        android:textSize="12sp"
        android:layout_below="@+id/hisensir_shumidity"
        android:layout_alignParentRight="true"
        android:layout_marginRight="66dp"
        />
    <TextView
        android:id="@+id/textview_stype"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="类型:"
        android:textSize="12sp"
        android:layout_below="@+id/textview_battery"
        />
    <TextView
        android:id="@+id/hisensir_type"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="温度传感器"
        android:textSize="12sp"
        android:layout_below="@+id/hisensir_battery"
        android:layout_toRightOf="@+id/textview_stype"
        android:layout_marginLeft="28dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="地址:"
        android:textSize="12sp"
       android:layout_toLeftOf="@+id/hisensir_address"
        android:layout_below="@+id/textview_strength"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/hisensir_address"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/hisensir_shumidity"
        android:text="凌云实验室:"
        android:layout_marginRight="6dp"
        android:textSize="12sp" />
</RelativeLayout>
